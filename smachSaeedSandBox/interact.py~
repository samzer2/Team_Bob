#!/usr/bin/env python

import rospy
import random

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Functions ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#

def intFun():
    rospy.init_node('InteractionNode')

    # psuedo Interaction
    waitTime = random.randint(1,5)
    rospy.loginfo( 'Interaction for %s' % waitTime + ' seconds')
    rospy.loginfo( 'started at %s' % rospy.get_time())
    rate = rospy.Rate(1./waitTime) #hz
    rate.sleep()
    
    success = random.randint(0,4) # 80% chance of success
    if success:
        print "Interaction succeeded"
        return 'success'
    elif not(success):
        print "Interaction failed"
        return 'failure'

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
if __name__ == '__main__':
    try:
        intFun()
    except rospy.ROSInterruptException:
        pass

